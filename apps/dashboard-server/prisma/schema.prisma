datasource db {
  provider = "mongodb"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model DataPoint {
  city       String?
  country    String?
  createdAt  DateTime @default(now())
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  intensity  Int?
  likelihood Int?
  region     String?
  relevance  Int?
  topics     String?
  updatedAt  DateTime @updatedAt
  year       Int?
}

model Filter {
  city      String?
  country   String?
  createdAt DateTime @default(now())
  endYear   Int?
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  pest      String?
  region    String?
  sector    String?
  source    String?
  swot      String?
  topics    String?
  updatedAt DateTime @updatedAt
}
